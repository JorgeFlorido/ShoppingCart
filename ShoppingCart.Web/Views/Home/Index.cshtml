@model IEnumerable<ShoppingCart.Service.ProductViewModel>

@{
    ViewBag.Title = "Shopping Cart";
}

<div class="jumbotron">
    <h1>Shopping Cart</h1>
    <p class="lead">Welcome</p>
</div>

<div class="row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
